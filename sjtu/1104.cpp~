#include <limits.h>
#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
#include <algorithm>
#include <iostream>
using namespace std;

int main()
{
	int i,j,k;
	int t;
	scanf("%d",&t);
	while(t--)
	{
		scanf("%d",&k);
		int ans =1;
		for( i =1;i<k;i++)
		  ans=ans*2;
		printf("%d\n",ans);
	}
	return 0;
}
